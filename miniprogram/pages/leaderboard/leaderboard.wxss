@import "/pages/public/wxss/hFilter.wxss";

page {
  background: var(--color-gray-light);
}

.main {
  display: flex;
  align-items: flex-start;
  padding: 0 8rpx;
}

.column {
  width: 50%;
}

.column_item {
  width: 350rpx;
  background: #fff;
  margin: 0rpx auto 20rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
}

.column_pic {
  position: relative;
  /* min-height: 350rpx; */
}
.column_pic image{
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  vertical-align: bottom;
}
.location{
  position: absolute;
  top: 18rpx;
  right: 15rpx;
  color: var(--color-white-dark);
  text-align:end;
  font-size: 18rpx;
  background-color:var(--color-black-transparent);
  padding:5rpx 10rpx;
  border-radius: 10rpx;
}


.info {
  position: absolute;
  left: 0;
  bottom: 0;

  width: 350rpx;
  padding: 10rpx 0rpx 18rpx 30rpx;

  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;

  background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.9) 80%);
}

.names {
  display: inline-block;
  width: 300rpx;
  max-width: 300rpx;
  box-sizing: border-box;
}

.cat-name {
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  color: var(--color-gray);
}


.photo-info{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}
.pher-name{
  font-size: 22rpx;
  color: var(--color-gray-max);
  margin-right: 12rpx;
}
.photo-date {
  font-size: 22rpx;
  color: var(--color-gray-max);
  flex-shrink: 0;
}


.like-button {
  /* width: 100rpx; */
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}

heart {
  margin: -20rpx 0 -25rpx 0;
}

.like-num {
  width: 100rpx;
  text-align: center;
  font-size: 20rpx;
  color: var(--color-gray-max);
}

.hide {
  display: none;
}


.loading image {
  width: 165.9rpx;
  height: 90.3rpx;
  margin: 10rpx 292rpx;

}
.loadnomore image {
  width: 750rpx;
  height: 100rpx;
  margin: 10rpx 0;
}

.ellipsis-text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.h-filter-item.long {
  margin: 20rpx 20rpx 20rpx 0rpx;
}